<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActorsApplication.Pages.ActorDetailPage"
             Title="{Binding FullName}">
    <VerticalStackLayout >
        <Image WidthRequest="150" Source="https://i.ytimg.com/vi/nX7CeTXoxyU/mqdefault.jpg"></Image>
        <Label HorizontalOptions="Center" FontSize="30" Text="{Binding LastName}"></Label>
        <Label HorizontalOptions="Center" FontSize="30" Text="{Binding FirstName}"></Label>
        <Label HorizontalOptions="Center" Text="{Binding BirthYear}"></Label>
      
        <Label HorizontalOptions="Start" Margin="10" Text="{Binding ShortBio}"></Label>

        <Button Text="Change Actor Details" Clicked="DemoChange"></Button>
    </VerticalStackLayout>
    
</ContentPage>